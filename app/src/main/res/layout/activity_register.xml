<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="40dp"
    tools:context=".register.view.RegisterActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans_bold"
        android:gravity="center"
        android:text="Registrar"
        android:textColor="#020617"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Campo Nome Completo -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Nome Completo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nomeRegistrarInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="13dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Informação abaixo do nome -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/work_sans"
        android:text="O nome deve corresponder ao que consta no RG."
        android:textColor="#64748B"
        android:textSize="13sp"
        android:gravity="center"/>

    <!-- Campo Email -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailRegistrarInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="13dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Senha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Senha"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/senhaRegistrarInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="13dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botão Registrar -->
    <Button
        android:id="@+id/buttonEnviarRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4894FE"
        android:fontFamily="@font/work_sans_bold"
        android:text="Registrar"
        android:textSize="16sp"
        android:textColor="#CDE5FF"
        android:layout_marginBottom="5dp" />

    <!-- Voltar para login -->
    <Button
        android:id="@+id/buttonVoltarLoginRegitrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CDE5FF"
        android:fontFamily="@font/work_sans_bold"
        android:text="Já tem uma conta? Entrar"
        android:textSize="16sp"
        android:textColor="#4894FE"
        android:layout_marginBottom="20dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
